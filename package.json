{
  "name": "@bgmx/monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "bgmc": "tsx packages/bgmc/src/cli.ts",
    "bgmx": "tsx apps/bgmx/src/cli.ts",
    "build": "turbo run build",
    "deploy:bgmw": "pnpm -C apps/bgmw run deploy",
    "dev": "turbo run dev --parallel",
    "format": "turbo run format --parallel",
    "release:bgmc": "pnpm -C packages/bgmc release",
    "release:bgmt": "pnpm -C packages/bgmt release",
    "release:bgmx": "pnpm -C apps/bgmx release",
    "release:tmdbc": "pnpm -C packages/tmdbc release",
    "test:ci": "turbo run test:ci",
    "tmdbc": "tsx packages/tmdbc/src/cli.ts",
    "typecheck": "turbo run typecheck",
    "preversion": "turbo run test:ci",
    "postversion": "turbo run build"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260103.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.4",
    "bangumi-data": ">=0.3.193",
    "bumpp": "latest",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "prettier": "^3.7.4",
    "release-it": "^16.2.1",
    "rimraf": "^6.1.2",
    "tsdown": "^0.18.4",
    "tsx": "^4.21.0",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=v20.8.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "release-it@16.2.1": "patches/release-it@16.2.1.patch"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "workerd"
    ]
  }
}
