{
  "name": "bgmw",
  "version": "0.0.3",
  "description": "Cloudflare Worker API surface for bgmc data services",
  "keywords": [
    "bgmc",
    "cloudflare",
    "hono"
  ],
  "homepage": "https://github.com/yjl9903/bgmc#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/bgmc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/bgmc.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "bgmw": "./cli.mjs"
  },
  "files": [
    "*.mjs",
    "drizzle",
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "d1:migrate": "wrangler d1 migrations apply DATABASE",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev src/worker.ts",
    "drizzle": "drizzle-kit",
    "drizzle:generate": "drizzle-kit generate",
    "format": "prettier --write 'src/**/*.ts'",
    "release": "release-it",
    "test:ci": "vitest --run && wrangler deploy --dry-run"
  },
  "dependencies": {
    "@hono/node-server": "1.19.8",
    "@hono/zod-validator": "0.7.6",
    "bgmc": "workspace:*",
    "bgmt": "workspace:*",
    "bgmx": "workspace:*",
    "drizzle-orm": "0.45.1",
    "hono": "4.11.4",
    "p-limit": "7.2.0",
    "tmdbc": "workspace:*",
    "zod": "4.3.5"
  },
  "engines": {
    "node": ">=v20.8.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(bgmw): release v${version}",
      "tag": false,
      "push": true
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "after:version": "pnpm run build",
      "before:init": "pnpm run build"
    }
  }
}
